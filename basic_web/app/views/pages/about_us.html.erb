<% provide (:about_us) %>
Your name is: <%= @name %></br>
Your email is: <%= @email %></br>

<%= @error_msg %> </br>

<%= form_for about_us_path, :method => "POST" do %>

<%= label_tag :name, "Enter your name: " %>
<%= text_field_tag :name , @name %> </br>

<%= label_tag :email, "Enter your email Address: " %>
<%= email_field_tag :email , @email %>
<%= submit_tag "Ask Question" %>
<%  end  %>